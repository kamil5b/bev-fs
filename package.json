{
  "name": "bun-vue-monolith",
  "module": "src/server/index.ts",
  "type": "module",
  "scripts": {
    "dev:server": "bun run --watch src/server/index.ts",
    "dev:client": "bun run build:client --hot",
    "dev": "bun run dev:server & bun run dev:client",
    "build:client": "bun build ./src/client/main.ts --outdir ./dist/client --naming-scheme hash",
    "build:server": "bun build ./src/server/index.ts --outdir ./dist/server",
    "build": "bun run build:client && bun run build:server"
  },
  "dependencies": {
    "@radix-ui/vue": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "lucide-vue-next": "^0.309.0",
    "pg": "^8.11.3",
    "recharts": "^2.10.4",
    "vue": "^3.4.5",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "sql-migrate": "^3.4.0",
    "tailwindcss": "^4.0.0-alpha.12",
    "typescript": "^5.3.3"
  },
  "trustedDependencies": [
    "pg" 
  ]
}